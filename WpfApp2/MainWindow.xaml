<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Авьлотзация" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Height="60" Margin="0,0,0,120" Grid.Column="1">
            <Label Content="login"/>
            <TextBox Height="30" Name="loginTextBox"/>
        </StackPanel>
        <StackPanel Height="60" Margin="0,0,0,0" Grid.Column="1">
            <Label Content="password"/>
            <TextBox Height="30" Name="passwordTextBox"/>
        </StackPanel>
        <Button x:Name="authButton" Height="30" Margin="0,120,0,0" Grid.Column="1" Content="Авторизоваться" Click="authButton_Click"/>
    </Grid>
</Window>
